@model QL_DoAnThucTap.Models.EF.Project
@{
    ViewBag.Title = "Cập nhật bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Project" class="nav-link">Đồ án</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Cập nhật</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật đồ án</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin cập nhật</h3>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Edit", "Project", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(x => x.Id)
                    <!-- your steps content here -->
                    <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                        <div class="form-group">
                            <label for="exampleInputPassword1">Tên đồ án</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Tên đồ án" })
                            @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Account</label>
                            @Html.DropDownListFor(x => x.TopicId, ViewBag.Topics as SelectList, "Khác", new { @class = "form-control select2 select2-hidden-accessible", style = "width: 100%;", data_select2_id = "1", tabindex = "-1", aria_hidden = "true" })
                        </div>
                        <div class="form-group">
                            <label>Account</label>
                            @Html.DropDownListFor(x => x.StudentId, ViewBag.Students as SelectList, "Khác", new { @class = "form-control select2 select2-hidden-accessible", style = "width: 100%;", data_select2_id = "1", tabindex = "-1", aria_hidden = "true" })
                        </div>
                        <div class="form-group">
                            <label>Account</label>
                            @Html.DropDownListFor(x => x.TeacherId, ViewBag.Teachers as SelectList, "Khác", new { @class = "form-control select2 select2-hidden-accessible", style = "width: 100%;", data_select2_id = "1", tabindex = "-1", aria_hidden = "true" })
                        </div>
                    </div>
                    <div id="information-part" class="content" role="tabpanel" aria-labelledby="information-part-trigger">
                        <a href="/Admin/Project" class="btn btn-danger">Quay lại</a>
                        <button type="submit" data-id="#SelectedItemId" class="btn btn-primary">Submit</button>
                    </div>
                }

            </div>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section scripts {
    <script>


    </script>
}


